    <!-- Tarjeta informativas -->
    <div class="container">
        
        <article class="col-md-12 animate__animated animate__zoomIn">
			<center><h2>Ventas.</h2></center>
		</article>

        <section class="row">

            <div class="col-md-4 ajuste">			
                <div class="card text-white" style="background-color: #0e2c40;">
                                        
                    <div class="card-body">

                        <h4 class="card-title">###.</h4>
