    <!-- Buscador -->
    <div class="container">
        
		<div class="row mt-1">
            
            <div class="col-md-6">
				<div class="card">
					<div class="card-body">
                        <form action="/search_inventory" method="post">
                            <div class="form-row">
                                <div class="col-10">
                                    <input type="text" name="busqueda" class="form-control" placeholder="Ingrese el nombre de producto o el código">
                                </div>

                                <div class="col">
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
                                </div>

                                <div class="col">
                                    <a href="/ventas" class="btn btn-success">All</a>
                                </div>
                            </div>

                        </form>
					</div>
				</div>

			</div>
                        
            <div class="col-md-6">
				<div class="card">
					<div class="card-body">
                        <form >
                            <div class="form-row">

                                <div class="col">
                                    <h4 >Total factura</h4>
                                </div>

                                <div class="col">
                                    <input type="number" name="valor_pagar" class="form-control" placeholder="0" readonly class="form-control-plaintext" value="<%= total[0].total_pagar %>">
                                </div>

                                <div class="col-1">
                                    <button type="submit" class="btn btn-success"><i class="fa fa-shopping-cart"></i></button>
                                </div>

                                <div class="col-1">
                                    <a href="/delete_factura" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                </div>
                            </div>

                        </form>  
                       
					</div>
				</div>

			</div>
        </div>
    </div>    

    <!-- Ventana emergente de agregar producto -->
    <!-- Modal -->
    <div class="modal fade" id="addproducmodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Producto a vender</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            </div>
            <div class="modal-body">
                <form>
                    
                    <div class="form-group">
                      <label for="formGroupExampleInput">Producto</label>
                      <input id="nameproductmodal" type="text" class="form-control" placeholder="Nameproducto" readonly class="form-control-plaintext">
                    </div>
                    <div class="form-group">
                      <label for="formGroupExampleInput2">Cantidad</label>
                      <input id="cantproductmodal" type="number" min="1" max="100" class="form-control" placeholder="1">
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput2">Precio</label>
                        <input id="precioproductmodal" type="number" class="form-control" placeholder="Another input">
                      </div>
                  </form>
            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Descartar</button>
            <button id="add_prod_venta" type="button" class="btn btn-success">Agregar a la factura</button>
            </div>
        </div>
        </div>
    </div>

    
    <!-- Ventana emergente de editar producto -->
    <!-- Modal -->
    <div class="modal fade" id="editproducmodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Editar producto de factura</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            </div>
            <div class="modal-body">
                <form>
                    
                    <div class="form-group">
                      <label for="formGroupExampleInput">Producto</label>
                      <input id="nameproductmodal_edit" type="text" class="form-control" placeholder="Nameproducto" readonly class="form-control-plaintext">
                    </div>
                    <div class="form-group">
                      <label for="formGroupExampleInput2">Cantidad</label>
                      <input id="cantproductmodal_edit" type="number" min="1" max="100" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput2">Precio</label>
                        <input id="precioproductmodal_edit" type="number" class="form-control">
                      </div>
                  </form>
            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Descartar</button>
            <button id="edit_prod_venta" type="button" class="btn btn-success">Editar item de la factura</button>
            </div>
        </div>
        </div>
    </div>


    <!-- Inventario -->
    <div class="container">

        <section class="row mt-1">

            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table custom-table">
                                <thead>
                                    <tr>
                                        <th scope="col">Código</th>
                                        <th scope="col">Nombre</th>
                                        <th scope="col">P. Venta</th>
                                        <th scope="col">Cant</th>
                                        <th scope="col">Edit</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <% if (lista) { %>
                                        <% for(var i = 0; i < lista.length; i++) { %>
                                        <tr>
                                            <td><%= lista[i].id_prod %></td>
                                            <td><%= lista[i].name_prod %></td>
                                            <td><%= lista[i].precio_venta %></td>
                                            <td><%= lista[i].cant %></td>
                                            <td>
                                                
                                                <button id="add" class="btn btn-success" value="<%= lista[i].idinventario %>" onclick="obtener(value)" ><i class="fa fa-plus"></i></button>
                                            </td>
                                        </tr>
                                        <% } %>
                                    <% } %>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>        
            </div>

            <div class="col-md-6">
									
                <div class="card bg-light">
					<div class="card-body">
						    
                        <div class="table-responsive">

                            <table class="table custom-table">
                              <thead>
                                <tr>
                                  <th scope="col">Producto.</th>
                                  <th scope="col">Cant.</th>
                                  <th scope="col">Precio</th>
                                  <th scope="col">Edit</th>
                                </tr>
                              </thead>
                              <tbody>
                                <% if (lis) { %>
                                    <% for(var i = 0; i < lis.length; i++) { %>
                                    <tr>
                                        <td><input type="text" name="nameprod" value="<%= lis[i].nameprod %>" style="font-size: 10pt" readonly class="form-control-plaintext"></td>
                                        <td><input type="number" min="1" max="100" name="cant" class="form-control" value="<%= lis[i].cant %>" style="font-size: 10pt" readonly class="form-control-plaintext"></td>
                                        <td><input type="number" name="precio_vent" value="<%= lis[i].precio_vent %>" class="form-control" style="font-size: 10pt" readonly class="form-control-plaintext"></td>
                                        <td>
                                        
                                            <button id="update_item_factura" class="btn btn-success" value="<%= lis[i].idinventario %>" onclick="obtener_update_factura(value)" ><i class="fa fa-pencil"></i></button>
                                            <button id="eliminar_item_factura" class="btn btn-danger" value="<%= lis[i].idinventario %>" onclick="obtener_edit_factura(value)" ><i class="fa fa-trash"></i></button>
                                        </td>
                                    </tr>
                                    <% } %>
                                <% } %>      
 
                              </tbody>
                            </table>
                        </div>


					</div>
				</div>

			</div>

        </section>


			
	</div>

	 
	 
	<footer class="animate__animated animate__slideInUp">
		<div align="center"><img src="/imagenes/logo2.png"></div>
		<div align="center"><p>Desing by Yespa </p></div>
		
